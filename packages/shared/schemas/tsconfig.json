{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2022",
    "lib": ["ES2022"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "paths": {
      "@engine/*": ["engine/*"],
      "@registry/*": ["registry/*"],
      "@types/*": ["types/*"]
    },
    "types": ["node"],
    "noEmitOnError": true
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}
