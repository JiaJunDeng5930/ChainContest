# Copy this file to infra/postgres/env/.env.local and adjust the values for your environment.
# Never commit real credentials. Scripts will refuse to run if secrets are missing.

# Container image and runtime identity
POSTGRES_IMAGE=postgres:16-alpine
POSTGRES_CONTAINER_NAME=chaincontest-postgres
POSTGRES_NETWORK_NAME=chaincontest-postgres-net

# Connection settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE_NAME=chaincontest

# Credential placeholders (replace in .env.local)
POSTGRES_SUPERUSER_NAME=postgres_admin
POSTGRES_SUPERUSER_PASSWORD=replace_me_securely
POSTGRES_APP_USER_NAME=postgres_app
POSTGRES_APP_USER_PASSWORD=replace_me_securely
POSTGRES_READONLY_USER_NAME=postgres_readonly
POSTGRES_READONLY_USER_PASSWORD=replace_me_securely

# Volume paths (relative to repository root)
POSTGRES_DATA_DIRECTORY=infra/postgres/data
POSTGRES_BACKUP_DIRECTORY=infra/postgres/backups
POSTGRES_LOG_DIRECTORY=infra/postgres/logs
POSTGRES_SNAPSHOT_DIRECTORY=infra/postgres/snapshots

# Backup retention policies
BACKUP_RETENTION_COUNT=7
BACKUP_RETENTION_DAYS=14

# Health and diagnostics
PG_HEALTHCHECK_MAX_RETRIES=3
PG_HEALTHCHECK_RETRY_DELAY_SECONDS=5

# Reset guardrails
ALLOW_TEST_RESET=false
RESET_ENVIRONMENT_NAME=local
